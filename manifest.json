{
  "manifest_version": 3,
  "name": "Reviewer Filter",
  "description": "Filter GitHub PR conversation by reviewer to see only their comments.",
  "version": "0.1.0",
  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/*/pull/*"
      ],
      "js": ["src/content.js"],
      "css": ["src/content.css"],
      "run_at": "document_idle"
    }
  ],
  "permissions": []
}
